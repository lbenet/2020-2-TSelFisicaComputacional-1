function itera_mapeo(f, x0, n::Int)
its = Float64[x0]
its_x = Float64[x0]
its_y = Float64[0.0]
     for i = 1:n
        push!(its_x ,x0)
           x0 = f(x0)
        push!(its_x,x0)
        push!(its,x0)
        push!(its_y,x0)
        push!(its_y,x0)
    end
    
    return its, its_x, its_y
end

